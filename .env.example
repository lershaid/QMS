# QMS Platform - Environment Variables
# Copy this file to .env and update with your values

# ==============================================================================
# GLOBAL SETTINGS
# ==============================================================================
NODE_ENV=development
LOG_LEVEL=info

# ==============================================================================
# DATABASE SETTINGS (PostgreSQL)
# ==============================================================================
POSTGRES_USER=qms_admin
POSTGRES_PASSWORD=qms_secure_password
POSTGRES_DB=qms_platform

# ==============================================================================
# MINIO (OBJECT STORAGE)
# ==============================================================================
MINIO_ROOT_USER=qms_minio_admin
MINIO_ROOT_PASSWORD=qms_minio_secure_password
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=qms_minio_admin
MINIO_SECRET_KEY=qms_minio_secure_password

# ==============================================================================
# RABBITMQ (MESSAGE BROKER)
# ==============================================================================
RABBITMQ_DEFAULT_USER=qms_rabbit
RABBITMQ_DEFAULT_PASS=qms_rabbit_password
RABBITMQ_URL=amqp://qms_rabbit:qms_rabbit_password@rabbitmq:5672

# ==============================================================================
# REDIS (CACHE)
# ==============================================================================
REDIS_URL=redis://redis:6379

# ==============================================================================
# JWT AUTHENTICATION
# ==============================================================================
JWT_SECRET=qms_jwt_super_secret_key_change_in_production_to_very_long_random_string
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# ==============================================================================
# API GATEWAY (PORT 3000)
# ==============================================================================
API_GATEWAY_PORT=3000
CORS_ORIGIN=http://localhost:5173

# Service URLs (internal Docker network)
IAM_SERVICE_URL=http://iam-service:3001
POLICY_SERVICE_URL=http://policy-service:3002
DOCUMENT_SERVICE_URL=http://document-service:3003
AUDIT_SERVICE_URL=http://audit-service:3004
CAPA_SERVICE_URL=http://capa-service:3005
RISK_SERVICE_URL=http://risk-service:3006
ANALYTICS_SERVICE_URL=http://analytics-service:3007
NOTIFICATION_SERVICE_URL=http://notification-service:3008

# ==============================================================================
# IAM SERVICE (PORT 3001)
# ==============================================================================
IAM_SERVICE_PORT=3001
IAM_DATABASE_URL=postgresql://qms_admin:qms_secure_password@postgres:5432/qms_iam

# ==============================================================================
# POLICY SERVICE (PORT 3002)
# ==============================================================================
POLICY_SERVICE_PORT=3002
POLICY_DATABASE_URL=postgresql://qms_admin:qms_secure_password@postgres:5432/qms_policy

# ==============================================================================
# DOCUMENT SERVICE (PORT 3003)
# ==============================================================================
DOCUMENT_SERVICE_PORT=3003
DOCUMENT_DATABASE_URL=postgresql://qms_admin:qms_secure_password@postgres:5432/qms_documents

# ==============================================================================
# AUDIT SERVICE (PORT 3004)
# ==============================================================================
AUDIT_SERVICE_PORT=3004
AUDIT_DATABASE_URL=postgresql://qms_admin:qms_secure_password@postgres:5432/qms_audit

# ==============================================================================
# CAPA SERVICE (PORT 3005)
# ==============================================================================
CAPA_SERVICE_PORT=3005
CAPA_DATABASE_URL=postgresql://qms_admin:qms_secure_password@postgres:5432/qms_capa

# ==============================================================================
# RISK SERVICE (PORT 3006)
# ==============================================================================
RISK_SERVICE_PORT=3006
RISK_DATABASE_URL=postgresql://qms_admin:qms_secure_password@postgres:5432/qms_risk

# ==============================================================================
# ANALYTICS SERVICE (PORT 3007)
# ==============================================================================
ANALYTICS_SERVICE_PORT=3007
ANALYTICS_DATABASE_URL=postgresql://qms_admin:qms_secure_password@postgres:5432/qms_analytics

# ==============================================================================
# NOTIFICATION SERVICE (PORT 3008)
# ==============================================================================
NOTIFICATION_SERVICE_PORT=3008
NOTIFICATION_DATABASE_URL=postgresql://qms_admin:qms_secure_password@postgres:5432/qms_notifications

# SMTP Settings for Email Notifications
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=notifications@qms.example.com
SMTP_PASS=smtp_password
SMTP_FROM=QMS Platform <notifications@qms.example.com>

# ==============================================================================
# FRONTEND (PORT 5173)
# ==============================================================================
VITE_API_GATEWAY_URL=http://localhost:3000

# ==============================================================================
# OPTIONAL: THIRD-PARTY INTEGRATIONS
# ==============================================================================

# AI/LLM for Policy Co-Pilot (OpenAI, Azure OpenAI, etc.)
# OPENAI_API_KEY=sk-...
# OPENAI_MODEL=gpt-4

# Regulatory Intelligence API
# REGULATORY_API_KEY=your_api_key
# REGULATORY_API_URL=https://api.regulatory-service.com

# ERP Integration
# SAP_API_URL=https://your-sap-instance.com
# SAP_API_KEY=your_sap_key
# NETSUITE_API_URL=https://your-netsuite-instance.com
# NETSUITE_API_KEY=your_netsuite_key

# ==============================================================================
# PRODUCTION SETTINGS (Uncomment and configure for production)
# ==============================================================================

# NODE_ENV=production
# LOG_LEVEL=warn

# Use strong passwords (minimum 32 characters)
# POSTGRES_PASSWORD=<generate-strong-password>
# MINIO_ROOT_PASSWORD=<generate-strong-password>
# RABBITMQ_DEFAULT_PASS=<generate-strong-password>
# JWT_SECRET=<generate-very-long-random-string-minimum-64-chars>

# Enable SSL/TLS
# MINIO_USE_SSL=true
# POSTGRES_SSL=true

# Use environment-specific URLs
# CORS_ORIGIN=https://qms.yourdomain.com
# VITE_API_GATEWAY_URL=https://api.yourdomain.com
